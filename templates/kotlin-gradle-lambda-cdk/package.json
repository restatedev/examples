{
  "name": "lambda-jvm-cdk",
  "version": "0.1.0",
  "bin": {
    "lambda-jvm-cdk": "bin/lambda-jvm-cdk.js"
  },
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "build": "npm run build-lambda && npm run build-cdk",
    "build-lambda": "cd lambda && ./gradlew build",
    "build-cdk": "cdk synth",
    "watch": "tsc -w",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.+(js|ts|json)\"",
    "verify": "npm run format -- --check && npm run lint && npm run build",
    "deploy": "npm run build && cdk deploy",
    "destroy": "npx cdk destroy"
  },
  "devDependencies": {
    "@restatedev/restate-cdk": "^0.8.1",
    "@types/jest": "^29.5.8",
    "@types/node": "20.9.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "aws-cdk": "^2.121.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.138.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
